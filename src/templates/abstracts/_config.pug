  const googleFonts = true
  let gFonts = [
    {font: 'Lato'},
    {font: 'Raleway', weight: 600}
  ]
  function fontsLink() {
    let output = 'https://fonts.googleapis.com/css2?'
    for(let i = 0; i < gFonts.length; i++) {
      output += `family=${gFonts[i].font}`
      if(gFonts[i].hasOwnProperty(weight)) {
        output += `:wght@${gFonts[i].weight}`
      }
      output += '&'
    }
    output += 'display=swap'
    return output
  }
  
